@inherits LayoutComponentBase

<style>
    body {
        background-image: repeating-linear-gradient(315deg, #00FFFF2E 92%, #073AFF00 100%), repeating-radial-gradient(75% 75% at 238% 218%, #00FFFF12 30%, #073AFF14 39%), radial-gradient(99% 99% at 109% 2%, #00C9FFFF 0%, #073AFF00 100%), radial-gradient(99% 99% at 21% 78%, #7B00FFFF 0%, #073AFF00 100%), radial-gradient(160% 154% at 711px -303px, #594ae2 0%, #073AFFFF 100%);
    }
</style>

<PageTitle>HelpDesk: Вход в систему</PageTitle>
<MudThemeProvider IsDarkMode="false"/>
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>
<MudLayout Style="height: 100vh;">
    <MudStack Style="height: 100vh;" Spacing="0" Row="false" Justify="Justify.Center" AlignItems="AlignItems.Center">
        <MudCard Style="padding: 18px 20px 18px 20px;" Class="p-5">
            <MudText Typo="Typo.h6">HelpDesk: Вход в систему</MudText>
            @Body
        </MudCard>
        <MudText Class="mt-4 mb-0" Style="color: white" Typo="Typo.body2">
            ГАПОУ СО «Самарский государственный колледж»
        </MudText>
        <MudText Class="mt-4 mb-0" Style="color: white" Typo="Typo.body2">
            @* ReSharper disable CSharpWarnings::CS0618 *@
            @ThisAssembly.Git.Branch/@ThisAssembly.Git.Commit от @ThisAssembly.Git.CommitDate
            @* ReSharper restore CSharpWarnings::CS0618 *@
        </MudText>
        <MudText Class="mt-0" Style="color: white" Typo="Typo.body2">
            Alex Kulagin
        </MudText>
    </MudStack>
</MudLayout>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

